<% if user_signed_in? %>
  <% if post.liked_by?(current_user) %>
    <span><i class="fas fa-heart" style="color: #FF367F;"></i></span><%=link_to post.likes.count, post_likes_path(post.id), method: :delete, remote: true %>
  <% else %>
    <span><i class="fa fa-heart-o"></i></span><%=link_to post.likes.count, post_likes_path(post.id), method: :post, remote: true %>
  <% end %>
<% else %>
  <i class="fas fa-heart" style="color: #FF367F;"><%= post.likes.count %></i>
<% end %>