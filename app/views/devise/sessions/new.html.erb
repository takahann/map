<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container">
    <div class="card card-container">
      <img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
      <%= render 'layouts/error_messages', model: f.object %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, :placeholder => "Email address", autocomplete: "email", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.password_field :password, :placeholder => "Password", autocomplete: "current-password", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block btn-signin" %>
      </div>
    </div>
  </div>
<% end %>
